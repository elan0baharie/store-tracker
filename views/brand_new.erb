<div class="well">
  <form class="form-horizontal" action="/brands" method="post">
    <h3>Brand Input</h3>
    <div class="form-group">
      <label for="name">Add a brand:</label>
      <input type="text" id="name" name="name">
    </div>
    <div class="form-group">
      <label for="style">Add a new style:</label>
      <input type="text" id="style" name="style">
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      <input type="number" id="price" name="price" min="1" max="300">
    </div>
    <button class="btn btn-info" type="submit">Submit</button>
  </form>
</div>

<p><a href="/">Home</a></p>
